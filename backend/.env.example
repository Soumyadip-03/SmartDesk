# Environment Variables Template
# Copy this file to .env.development, .env.staging, or .env.production
# and fill in the appropriate values

# Database
DATABASE_URL="postgresql://<username>:<password>@<host>:5432/<database>"

# JWT Secret (Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET="<generate-random-secret>"

# Admin Credentials
ADMIN_PASSWORD="<set-strong-password>"
DEFAULT_USER_PASSWORD="<set-strong-password>"

# SMTP Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="<your-email>"
SMTP_PASS="<your-app-password>"
SMTP_FROM="SmartDesk <noreply@smartdesk.com>"

# Server Configuration
NODE_ENV="development"
PORT="3001"
TZ="Asia/Kolkata"

# Frontend URL
FRONTEND_URL="http://localhost:5173"

# Security Secrets
CSRF_SECRET="<generate-random-secret>"
SESSION_SECRET="<generate-random-secret>"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# AI Chatbot (Optional)
GEMINI_API_KEY="<your-gemini-api-key>"
